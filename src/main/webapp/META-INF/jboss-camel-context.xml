<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:jee="http://www.springframework.org/schema/jee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">
  <jee:jndi-lookup id="MyCamelDS" jndi-name="java:jboss/datasources/MyCamelDS"/>
  <bean class="org.jboss.demo.CurrencyConvertor" id="currencyconvertor"/>
  <camelContext id="spring-context" xmlns="http://camel.apache.org/schema/spring">
    <route id="currencies">
      <from id="_from4" uri="servlet:currencies"/>
      <to id="_to1" uri="sql:select currencycode as code, currencyname as name from currencyexchange?dataSource=MyCamelDS"/>
      <marshal id="_marshal2">
        <json library="Jackson" prettyPrint="true"/>
      </marshal>
    </route>
    <route id="rates">
      <from id="_from1" uri="servlet:rates"/>
      <to id="_to3" uri="sql:select * from currencyexchange?dataSource=MyCamelDS"/>
      <marshal id="_marshal1">
        <json library="Jackson" prettyPrint="true"/>
      </marshal>
    </route>
    <route id="currency-convert">
      <from id="_from2" uri="servlet:/currency"/>
      <log id="_log1" message="Got currency: ${headers.currency} and amt ${headers.amt}"/>
      <choice id="_choice1">
        <when id="_when1">
          <header>currency</header>
          <to id="_to4" uri="sql:select * from currencyexchange where currencycode= :#currency ?dataSource=MyCamelDS"/>
          <log id="_log2" message="converting to currency ${body}"/>
          <bean id="_bean1" method="convertUSD(${headers.amt},${body})" ref="currencyconvertor"/>
        </when>
        <otherwise id="_otherwise1">
          <log id="_log3" message="nothing to lookup"/>
          <setBody id="defaultResponse">
            <constant>you need to specify query param 'currency'</constant>
          </setBody>
        </otherwise>
      </choice>
    </route>
    <route id="welcome-route">
      <from id="_from3" uri="timer:greeter?period=30s"/>
      <log id="welcomeLog" loggingLevel="WARN" message="Welcome to Fuse on EAP Course :)"/>
    </route>
    <route id="hello-route">
      <from id="_from5" uri="direct:hello"/>
      <transform>
        <simple>Hello ${body}!</simple>
      </transform>
    </route>
  </camelContext>
</beans>
